{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    },
    "types": [
      "@nuxt/schema",
      "@nuxt/image"  
    ]
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.vue"],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
